
<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row" id="tags-section-user">
    <div class="col-md-12 text-left">
    <h4>Interests</h4>
    <% Tag.all.each do |tag| %>
         <%= render partial: 'interests/interest_button', locals: {tag: tag} %>

    <% end %>
    </div>

    </div>


<%= form_for(current_user) do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this @user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h5 ><input type="checkbox" id="trigger" name="question" checked>  Subscribe to text message alerts for events</h5></input>

    <div class="form-group" id="hidden_fields">
        <%= f.label :Phone_Number %>
        <%= f.text_field :phone, class: "form-control" %>
    </div>


  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street, class: "form-control"  %>
  </div>


  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, class: "form-control"  %>
  </div>

  <%= link_to("Subscribe to Calendar", "webcal://campusnow.herokuapp.com/users/#{current_user.id}/calendar-sync", :class=>"btn btn-default btn-transparent btn-submit-user submit-bring-way-down" ) %>
<br/>
  <div class="actions">
    <%= f.submit class: "btn btn-default btn-transparent btn-submit-user submit-bring-way-down"%>
  </div>

<% end %>




</div>


<script type="text/javascript">
$(function() {

  // Get the form fields and hidden div
  var checkbox = $("#trigger");
  var hidden = $("#hidden_fields");

  // Hide the fields.
  // hidden.hide();
  checkbox.change(function() {
    // Check to see if the checkbox is checked.
    // If it is, show the fields and populate the input.
    // If not, hide the fields.
    if (checkbox.is(':checked')) {
      // Show the hidden fields.
      hidden.show();
    } else {
      // Make sure that the hidden fields are indeed
      // hidden.
      hidden.hide();
//if hidden then erases value
      $("#hidden_field").val("");
    }
  });
});

</script>

