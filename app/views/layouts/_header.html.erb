<section class="main-header text-center">
            <nav role="navigation" class="navbar navbar-default  navbar-fixed-top" id ="nav">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    <!-- Collection of nav links and other content for toggling -->

                    <div id="navbarCollapse" class="collapse navbar-collapse">

                      <%= link_to "CampusNow", root_path, :class=>"navbar-brand", :id=>"logo_text" %>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <%= link_to "All Events", events_path %>
                            </li>
                            <% if can_host? %>
                              <li>
                                <%= link_to "Add Event", events_new_path %>
                              </li>
                            <% end %>
                            <% if is_admin? %>
                              <li>
                                <%= link_to "Users", users_path %>
                              </li>
                            <% else %>
                            <% end %>
                            <% if logged_in? %>
                                <li> <%= link_to "Your Events", current_user%> </li>
                                <li> <%= link_to "Sign out", logout_path %> </li>
                            <% else %>
                                <li> <%= link_to "Login", get_url %> </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </nav>
        </section>
