

<%= form_for(event) do |f| %>
<% if event.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

	<ul>
		<% event.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :description %>
	<%= f.text_area :description %>
</div>

<div class="field">
	<%= f.label :location %>
	<%= f.text_field :location %>
</div>

<div class="field">
	<%= f.label :start %>
	<%= f.datetime_select :start %>
</div>

<div class="field">
	<%= f.label :end %>
	<%= f.datetime_select :end %>
</div>

<div class="field">
	<%= f.label :price %>
	<%= f.number_field :price %>
</div>

<div class="field">
	<%= f.label :host_id %>
	<%= f.number_field :host_id %>
</div>

<!-- user selects tags for events -->

<div class="tags">
	<%= f.label "Tags" %>
	<%= check_box_tag(:sports,1, false) %>
	<%="Sports".html_safe %> <br />
	<%= check_box_tag(:academic,2, false) %>
	<%="Academics".html_safe %> <br />
	<%= check_box_tag(:food,3, false) %>
	<%="Free Food".html_safe %> <br />
	<%= check_box_tag(:clubs,4, false) %>
	<%="Clubs".html_safe %> <br />
	<%= check_box_tag(:religious,5, false) %>
	<%="Religious".html_safe %> <br />
</div>



<div class="actions">
	<%= f.submit %>
</div>
<% end %>
