		#gallery img {
			height: 130px;
		}

		figure {

			width: 200px;
			display: block;
			overflow: hidden;
			z-index: 100;
		}

		figcaption {
			height: 50%;
			width: 97%;
			background: url("http://gridelicious.net/themes/treble/demo/assets/images/css/thumb_over.png") no-repeat center 150px black;
			text-align: center;
			position: absolute;
			bottom: 0;
			left: -500px;
			opacity: 0;
			padding: 5px;
			margin-left: 5px;
			margin-right: 5px;
			overflow: hidden;
		}

		a {
			color: #fff;
		}
		a:hover figcaption {
			opacity: 0.8;
			left: 0;
			color: #fff;
			transition: all 0.7s;
		}
		.nopadding {
			padding: 0 !important;
			margin: 0 !important;
		}

	</style>

