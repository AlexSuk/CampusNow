<div class="search">
	<form role="form" action=<%=search_path%> method="get">
		<div class="col-md-4">
			<div class="form-group">
				<label class="sr-only" for="location">Search Events or Catagories</label>
				<input type="text" class="form-control" id="search" placeholder="Search Events or Categories" name="event">
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<label class="sr-only" for="location">Location</label>
				<input type="text" class="form-control" id="location" placeholder="Location" name="location">
			</div>
		</div>
		<div class="col-md-2">
			<div class="form-group">
				<div id='datetimepicker1' class="input-group">
					<input type="text" class="form-control" placeholder="Date" name=date>
					<span class="input-group-addon">
						<i class="glyphicon glyphicon-calendar"></i>
					</span>
				</div>
			</div>
		</div>
		<div class="col-md-2 form-group">
			<button type="submit" class="btn btn-default btn-white">Search</button>
		</div>
	</form>
</div>
