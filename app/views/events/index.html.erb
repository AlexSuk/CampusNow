        <h1>Events</h1>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Price</th>
                    <th>Host</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @events.each do |event| %>
                <tr>
                    <td><%= event.name %></td>
                    <td><%= event.description %></td>
                    <td><%= event.location %></td>
                    <td><%= event.start %></td>
                    <td><%= event.end %></td>
                    <td><%= event.price %></td>
                    <td><%= event.host_id %></td>
                    <td><%= link_to 'Show', event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

