<%= render "layouts/header" %>

<section class="events_all_section">
	<div class="container">


    <div class="top-thumbnail text-center">
			<%= image_tag "All-Event.png", class:"img-responsive" %>
        <div class="top-caption">
            <h1><%= top_image_text %></h1>

        </div>
    </div>



		<div class="row">
			<div class=" events_list">
				<div class="col-md-2 left-side-column">
					<%= sidebar_date %>
					<%= sidebar(@locations) %>
				</div>
			</div>
			<div class="col-md-10">
				<div class="row event_row">
					<% @events.sort_by {|e| e.start}.each do |event| %>
					<%= list_event(event, "col-md-4") %>
					<% end %>
				</div>
			</div>

			<div class="text-center"> <%= will_paginate %> </div>

		</section <!-- /.row --> <p id="notice"><%= notice %></p>
	</body>

	</html>


<style>
.top-thumbnail {
    position: relative;
}

.top-caption {
    position: absolute;
    top: 30%;
    left: 0;
    width: 100%;
}
.top-caption h1{
	color: #fff;
	font-size: 55px;
}
</style>
